{{#block "header"}}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{#block "title"}}Departments{{/block}}</title>
        <link rel="stylesheet" href="/css/main.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Festive&family=Poppins:wght@700&family=Roboto:wght@100&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    </head>
    <body>
{{/block}}

<div class="container main-block" style="padding-left: 0px; padding-right: 0px;">
    <div class="fixed-top">
        <nav class="container navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="/">Departments</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Positions
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {{#if positions}}
                                    {{#each positions}}
                                        <li><a class="dropdown-item" href="/positions/{{id}}">{{name}}</a></li>
                                    {{/each}}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/positions/new"> New Position</a></li>
                                    <li><a class="dropdown-item text-danger" href=""  data-bs-toggle="modal" data-bs-target="#staticDeleteAllPositions">Delete All Positions</a></li>
                                {{else}}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/positions/new"> New position</a></li>
                                {{/if}}
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Departments
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {{#if departments}}
                                    {{#each departments}}
                                        <li><a class="dropdown-item" href="/departments/{{id}}">{{name}}</a></li>
                                    {{/each}}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/departments/new"> New Department</a></li>
                                    <li><a class="dropdown-item text-danger"  href="" data-bs-toggle="modal" data-bs-target="#staticDeleteAllDepartments">Delete All Departments</a></li>
                                {{else}}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/departments/new">New Department</a></li>
                                {{/if}}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="add-buttons" style="padding-left: 10px; padding-right: 10px;">
        <div>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-success" onclick="window.location.href='/employees/new';"> New Employee <i class="bi bi-people-fill"></i></button>
                <button type="button" class="btn btn-success" onclick="window.location.href='/positions/new';"> New Position <i class="bi bi-file-person"></i></button>
                <button type="button" class="btn btn-success" onclick="window.location.href='/departments/new';">+ New Department <i class="bi bi-collection-fill"></i></button>
            </div>
            {{#block "components"}}{{/block}}
        </div>
    </div>
    {{#block "content"}}
    {{/block}}
    <!-- Delete Department -->
    <div class="modal fade" id="staticDeleteAllDepartments" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Delete All Departments</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <i class="bi bi-shield-fill-exclamation text-danger"></i>
                    Confirm you are about to delete all departments!!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/delete/departments/all';">Delete</button>
                    <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Positions -->
    <div class="modal fade" id="staticDeleteAllPositions" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Delete All Positions</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <i class="bi bi-shield-fill-exclamation text-danger"></i>
                    Confirm you are about to delete all Positions!!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/delete/positions/all';">Delete</button>
                    <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete all items -->
    <div class="modal fade" id="staticDeleteAll" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Delete All Items</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <i class="bi bi-shield-fill-exclamation text-danger"></i>
                    Confirm you are about to delete all Employees, Positions & Departments!!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/delete/all';">Delete</button>
                    <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--begin footer-->
{{#block "footer"}}
    <div class="footer">
        <div class="footer-con container">
            <nav class="nav-footer text-white">
                <li class="" id="copyRight">Delete All Items  <a class="text-danger" style="font-weight: bold;" href="" data-bs-toggle="modal" data-bs-target="#staticDeleteAll"></a></li>
                <li class="text-white ms-auto" id="copyRight">@Copyright 2022 T</li>
            </nav>
        </div>
    </div>
    </body>
    </html>
{{/block}}